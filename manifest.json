{
  "manifest_version": 3,
  "name": "AI Question Extractor",
  "version": "1.0.0",
  "description": "Extract questions from screenshots using Gemini AI",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "clipboardWrite",
    "scripting"
  ],
  "host_permissions": [
    "https://aqe.onrender.com/*",
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Question Extractor"
  }
}

